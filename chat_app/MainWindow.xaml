<Window x:Class="LlamaChatApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LlamaChatApp"
        xmlns:md="clr-namespace:Markdig.Wpf;assembly=Markdig.Wpf"
        mc:Ignorable="d"
        Title="LlamaChat on Windows" Height="750" Width="850">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Padding="5">
            <MenuItem Header="_File">
                <MenuItem x:Name="OpenModelMenuItem" Header="_Open Model..." Click="OpenModelMenuItem_Click" />
                <MenuItem x:Name="ClearChatMenuItem" Header="_Clear Chat" Click="ClearChatMenuItem_Click"/>
                <Separator />
                <MenuItem Header="E_xit" Click="ExitMenuItem_Click" />
            </MenuItem>
        </Menu>

        <!-- Rich Chat Display Area -->
        <ListView x:Name="ChatListView" Grid.Row="1" Margin="15,5,15,10"
                  BorderThickness="0"
                  HorizontalContentAlignment="Stretch"
                  ScrollViewer.CanContentScroll="False"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Focusable" Value="False"/>
                    <Setter Property="IsHitTestVisible" Value="False"/>
                </Style>
            </ListView.ItemContainerStyle>
            <ListView.ItemTemplate>
                <DataTemplate DataType="{x:Type local:ChatMessage}">
                    <Grid Margin="0,6">
                        <StackPanel HorizontalAlignment="{Binding Alignment}" MaxWidth="600">
                            <!-- Author Name -->
                            <TextBlock Text="{Binding Author}" 
                                       Foreground="{Binding AuthorBrush}" 
                                       FontWeight="Bold"
                                       Margin="8,0,8,3"/>
                            <!-- Message Bubble -->
                            <Border Background="{Binding BubbleBackground}" CornerRadius="10">
                                <!-- USE MARKDOWNVIEWER FOR RICH FORMATTING -->
                                <md:MarkdownViewer Markdown="{Binding Text}" 
                                                   Padding="10" 
                                                   Background="Transparent"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- The input area at the bottom -->
        <Grid Grid.Row="2" Margin="15,0,15,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox x:Name="UserInputTextBox" 
                     Grid.Column="0" 
                     VerticalContentAlignment="Center" 
                     FontSize="14"
                     Padding="8"
                     KeyDown="UserInputTextBox_KeyDown"
                     AcceptsReturn="True"/>

            <Button x:Name="StopButton" Grid.Column="1" Content="Stop" Margin="10,0,0,0" Padding="20,8" FontSize="14" Click="StopButton_Click" Background="#FFF7A2A2" IsEnabled="False"/>
            <Button x:Name="SendButton" Grid.Column="2" Content="Send" Margin="10,0,0,0" Padding="25,8" FontSize="14" Click="SendButton_Click" IsDefault="True"/>
        </Grid>

        <!-- Inference Settings Panel -->
        <Border Grid.Row="3" Background="#F0F0F0" BorderBrush="#D0D0D0" BorderThickness="0,1,0,0">
            <StackPanel x:Name="SettingsPanel" Orientation="Horizontal" Margin="15,5">
                <TextBlock Text="Temperature:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <Slider x:Name="TemperatureSlider" Width="100" Minimum="0" Maximum="2.0" Value="0.7" SmallChange="0.1" IsSnapToTickEnabled="True" TickFrequency="0.1" Margin="5,0,15,0"/>

                <TextBlock Text="Top P:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <Slider x:Name="TopPSlider" Width="100" Minimum="0" Maximum="1.0" Value="0.9" SmallChange="0.05" IsSnapToTickEnabled="True" TickFrequency="0.05" Margin="5,0,15,0"/>

                <TextBlock Text="Max Tokens:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                <TextBox x:Name="MaxTokensTextBox" Width="50" Text="512" VerticalContentAlignment="Center" Margin="5,0,15,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>